= form_for([@feature.app, @feature]) do |f|
  - if @feature.errors.any?
    #error_explanation
      %h2
        = pluralize(@feature.errors.count, 'error') 
        Not saved!
      %ul
        - @feature.errors.full_messages.each do |msg|
          %li
            = msg
  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :description
    = f.text_area :description

  = f.hidden_field :user_id
  = f.hidden_field :app_id

  .actions
    = f.submit
